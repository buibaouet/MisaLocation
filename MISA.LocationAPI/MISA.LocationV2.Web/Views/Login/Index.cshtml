@{
    Layout = null;
}
@model MISA.LocationAPI.Models.UserModel
@{
    ViewData["Title"] = "Login";
}
@{
    var response = ViewBag.param;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="shortcut icon" type="image/ico" href="~/img/shortcut.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/css/views/login/login.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <title> @ViewData["Title"]</title>

</head>
<body>
    <div class="login-box text-dark text-center card">
        <img src="~/img/logo.png" class="mt-2 mb-3 align-self-center" />
        <h4 class="mb-4 font-weight-bold">Location V2</h4>
        @if (response != null)
        {
            <div class="alert alert-danger">
                @response
            </div>
        }

        <form asp-controller="User" asp-action="Login" method="post" class="form">
            <div class="row p-b-30">
                <div class="col-12">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-success text-white"><i class="fa fa-user-circle"></i></span>
                        </div>
                        <input class="form-control text-secondary form-control-user" type="text" asp-for="Username" placeholder="Username" required>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-warning text-white"><i class="fa fa-pencil"></i></span>
                        </div>
                        <input class="form-control text-secondary form-control-user" type="password" asp-for="Password" placeholder="Password" required>
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-primary w-100 rounded-pill form-control-user mt-2" value="Login">
        </form>
    </div>
</body>
</html>