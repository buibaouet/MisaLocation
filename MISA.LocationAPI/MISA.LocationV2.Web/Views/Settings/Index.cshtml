
@{
    ViewData["Title"] = "Settings";
}

@section css {
    <link href="~/css/views/settings/settings.css" rel="stylesheet" asp-append-version="true" />
}

@section scripts {
    <script src="~/js/views/settings/settings.js" asp-append-version="true"></script>
    <script src="~/js/views/settings/validation.js" asp-append-version="true"></script>
    <script src="~/js/views/settings/modal-ins-loc.js" asp-append-version="true"></script>
    <script src="~/js/views/settings/modal-upd-loc.js" asp-append-version="true"></script>
    <script src="~/js/views/settings/modal-del-loc.js" asp-append-version="true"></script>
}

<div class="wrapper wrapper-content animated fadeInRight">
    <!-- Buttons -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row toolbar">
                <div class="col-sm-12 col-md-3">
                    <!-- Thêm các attribute data-backdrop="static" data-keyboard="false" chặn sự kiện thoát modal khi click ra ngoài-->
                    <!-- https://stackoverflow.com/questions/22207377/disable-click-outside-of-bootstrap-modal-area-to-close-modal -->
                    <button id="btn-ins-loc" type="button" class="btn btn-info btn-lg btn-block mr-sm-1 mt-1" data-toggle="modal" data-target="#modal-ins-loc" data-backdrop="static" data-keyboard="false">
                        <i class="fa fa-plus-square mr-1"></i>
                        <b>Insert</b>
                    </button>
                </div>
                <div class="col-sm-12 col-md-3">
                    <button id="btn-upd-loc" type="button" class="btn btn-warning btn-lg btn-block mr-sm-1 mt-1" data-toggle="modal" data-target="#modal-upd-loc" data-backdrop="static" data-keyboard="false">
                        <i class="fa fa-edit mr-1"></i>
                        <b>Update</b>
                    </button>
                </div>
                <div class="col-sm-12 col-md-3">
                    <button id="btn-del-loc" type="button" class="btn btn-danger btn-lg btn-block mr-sm-1 mt-1" data-toggle="modal" data-target="#modal-del-loc" data-backdrop="static" data-keyboard="false">
                        <i class="fa fa-window-close mr-1"></i>
                        <b>Delete</b>
                    </button>
                </div>
                <div class="col-sm-12 col-md-3">
                    <button id="btn-refrs" type="button" class="btn btn-primary btn-lg btn-block mr-sm-1 mt-1">
                        <i class="fa fa-undo mr-1"></i>
                        <b>Refresh</b>
                    </button>
                </div>
            </div>
        </div>
    </div>


    <partial name="/Views/Settings/_ModalInsertLocation.cshtml" />
    <partial name="/Views/Settings/_ModalUpdateLocation.cshtml" />
    <partial name="/Views/Settings/_ModalDeleteLocation.cshtml" />

    <!-- Modal xác nhận -->
    <div class="modal" id="acceptModalCenter" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Save Change?</h5>
                    <button type="button" class="close hide-accept-change" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Do you want to save your changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary hide-accept-change">Close</button>
                    <button type="button" class="btn btn-primary accept-change">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Tables -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Changelogs</h3>
                    <div class="table-responsive scrollable-table">
                        <table id="tbl-changelogs" class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>New LocationID</th>
                                    <th>Old LocationID</th>
                                    <th>Location Name</th>
                                    <th>Kind</th>
                                    <th>Parent ID</th>
                                    <th>Time</th>
                                    <th>Action</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody id="changelogs"></tbody>
                        </table>
                        <span id="noChange">No changes available in table</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

